<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
                <form action="/editar/{{task._id}}" method="post">
                    <div class="mb-3">
                        <input type="text" name="title" placeholder="Titulo" value="{{task.title}}" class="form-control rounded-0 bg-dark text-white">
                    </div>
                    <textarea name="description" rows="3" class="form-control rounded-0 bg-dark text-white">
                        {{task.description}}</textarea>
                    <button class="btn btn-primary">Actualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>
